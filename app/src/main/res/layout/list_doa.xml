<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDoa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="@dimen/_5sdp"
        android:backgroundTint="#203C5873"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            >
            <TextView
               android:id="@+id/number_doa"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:text="1"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:paddingTop="@dimen/_5sdp"
                android:background="@drawable/vector"
                />
            <TextView
                android:id="@+id/judul_doa"
                android:textSize="@dimen/_16ssp"
                android:fontFamily="@font/inder"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:maxLines="2"
                android:text="Doa"
                android:layout_toRightOf="@id/number_doa"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginStart="@dimen/_10sdp"

                />

            <ImageButton
                android:id="@+id/btnCollapse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/tampilDoaBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#203C5873"
        android:padding="@dimen/_15sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#203C5873"
            >

            <TextView
                android:id="@+id/teks_doa_arab"
                android:text="tes"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_20sdp"
                android:fontFamily="@font/inter_bold"
                android:textColor="#63B4FF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                />
            <TextView
                android:id="@+id/teks_doa_latin"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="tes"
                android:fontFamily="@font/inder"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/teks_doa_arti"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="tes"
                android:textColor="#B3B4B5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"

                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>